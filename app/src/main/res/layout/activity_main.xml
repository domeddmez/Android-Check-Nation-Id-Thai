<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="13"
            android:cursorVisible="false"
            android:id="@+id/etIdCard"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_android_black_24dp"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:text=""
            android:background="@drawable/boarder_edittext"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="176dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btConfirm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="66dp" app:layout_constraintTop_toBottomOf="@+id/etIdCard"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="Try Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/btTryAgain" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="66dp" app:layout_constraintTop_toBottomOf="@+id/etIdCard"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="status"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStatus"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/etIdCard" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Check Nation Id Thai."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_credit_card_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>